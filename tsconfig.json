{
    "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "noEmit": true,
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "jsx": "react",
      "typeRoots": ["src/client/@types", "./node_modules/@types"]
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts", "src/server/index.ts"
    ]
  }
  